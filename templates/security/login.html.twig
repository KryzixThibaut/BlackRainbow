{% extends 'base.html.twig' %}

{% block title %}{{parent()}} Connectez-vous
{% endblock %}

{% block body %}
<body class="bg-white">


	<div class="container-fluid px-5 py-5 my-5 mx-5 gx-1">

	</div>


	<div class="container-fluid">
	<h1 class="text-center text-dark mt-5 pt-5 display-1 fw-bold">
			Connectez-vous</h1>


		<div class="row justify-content-center">
			<div class="col-12 col-md-6 p-4 m-0 text-primary">

				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté en tant
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					
					<label for="inputEmail" class="fw-bold text-black">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					<label for="inputPassword" class="fw-bold text-black">Mot de passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
					        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					        See https://symfony.com/doc/current/security/remember_me.html
					
					        <div class="checkbox mb-3">
					            <label>
					                <input type="checkbox" name="_remember_me"> Remember me
					            </label>
					        </div>
					    #}
                    <div class="text-center">
					<button class="btn bg-primary text-white m-4" type="submit">
						CONNEXION
					</button>
                    </div>
				</form>
			</div>
		</div>
	</div>

	<div class="container-fluid px-5 py-5 my-5 mx-5 gx-1">

	</div>

	<div class="container-fluid px-5 py-5 my-5 mx-5 gx-1">

	</div>

	<div class="container-fluid px-5 py-5 my-5 mx-5 gx-1">

	</div>

	<div class="container-fluid px-5 py-5 my-5 mx-5 gx-1">

	</div>
</body>
{% endblock %}