{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Détails article
{% endblock %}

{% block body %}
	<body class="bg-dark">
	<div class="mt-4 pt-4">
		</div>
		<div class="container-fluid py-5 my-5">
			<div class="row">
				<div class="col-md-5">
					<img class="solo-img img-fluid img-border-solo" src="{{ asset('uploads/fichiers/'~articles.image) }}" alt="{{ articles.designation }}" style="max-width: 80%; margin-left: 50px;">
				</div>
				<div class="col-md-6">
					<h1 class="card-title text-white mt-5 text-start">{{ articles.designation }}</h1>
					<hr>
					<h2 class="mb-5 ms-auto text-primary text-start">{{ articles.prix }}€</h2>
					<ul class="list-unstyled">
						<li class="mb-2 text-white text-start">{{ articles.description }}</li>
					</ul>
					
					<a href="{{ path('ajout-panier', {'id': articles.id, 'page': 'article', 'action': 'add'}) }}" class="btn btn-canvas-addpanier mt-5 text-black">Ajouter au panier</a>
				</div>
			</div>
		</div>
		<div class="mt-5 pt-5">
		</div>
		<div class="mt-5 pt-5">
		</div>
	</body>
{% endblock %}